%section.billing.container
  .row
    .span10.offset1
      .plan_and_payments
        %section.plan
          %header
            %h1 Billing
          %table.table
            %thead
              %tr
                %th Plan
                %th Next Billing Date
                %th Price
            %tbody
              %tr
                %td The All You Can Watch Plan
                %td
                  = (@payments.first.created_at + 1.month).strftime('%m-%d-%Y')
                %td $9.99 per month
        = button_to "Cancel Service", cancel_service_user_path(current_user), class: "btn"

        %section.payment_history
          %header
            %h3 Payment History
          %table.table
            %thead
              %tr
                %th Date
                %th Service Duration
                %th Total
            %tbody
              - @payments.each do |payment|
                %tr
                  %td
                    = payment.created_at.strftime('%m-%d-%Y')
                  %td
                    = "#{(payment.created_at.strftime('%m-%d-%Y'))}" " -- " "#{(payment.created_at + 1.month - 1.day).strftime('%m-%d-%Y')}"
                  %td $9.99