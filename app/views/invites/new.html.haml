%section.invite.container
  .row
    .span10.offset1
      = bootstrap_form_for @invite, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          =f.text_field :invited_name, label: "Friend's Name"
          =f.text_field :invited_email, label: "Friend's Email Address"
          =f.text_area :message, class: 'span4', rows: 6, placeholder: "Join MyFlix today! It's really great!", label: "Invitaion Message"
        %fieldset.action
          %input(type="submit" value="Send Invitation" class="btn")