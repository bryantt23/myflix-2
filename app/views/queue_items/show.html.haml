%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            = form_for @queue_items do |f|
              - @queue_items.each do |queued_item|
              %tr
                %td
                  = f.text_field :order_id
                %td
                  = link_to queued_item.video.title, video_path(queued_item.video.id)
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  = f.select :rating, options_for_select([5, 4, 3, 2, 1].map { |number| [pluralize(number, "Star")]})
                %td
                  - queued_item.video.categories.each do |category|
                    = link_to category.name, category_path(category)
                    %br
                %td
                  = link_to queue_item_path(queued_item.id), method: :delete do
                    %i.icon-remove
        = f.submit "Update Instant Queue", nil, class: "btn"
